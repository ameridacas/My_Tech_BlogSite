<style>
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
  }

  .flex-column {
    display: flex;
    flex-direction: column;
  }

  .justify-space-around {
    justify-content: space-around;
  }

  .display-flex {
    display: flex;
  }

  .justify-space-between {
    justify-content: space-between;
  }

  .align-center {
    align-items: center;
  }

  .p-2 {
    padding: 2px;
  }

  .container {
    width: 80%;
    margin: 0 auto;
  }

  .mt-5 {
    margin-top: 5px;
  }

  h1 {
    color: #333;
  }

  nav a {
    text-decoration: none;
    color: #333;
    margin-right: 10px;
  }

  nav button {
    background-color: #333;
    color: #fff;
    border: none;
    padding: 5px 10px;
    cursor: pointer;
  }

  nav button.no-button {
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    color: #333;
  }

  main {
    background-color: #fff;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }

  h2 {
    color: #333;
  }

  .blog-posts {
    margin-bottom: 20px;
    border-bottom: 1px solid #ccc;
    padding-bottom: 20px;
  }

  footer {
    background-color: #333;
    color: #fff;
    text-align: center;
    padding: 10px 0;
    position: fixed;
    bottom: 0;
    width: 100%;
  }
</style>

<body>
  <div class="flex-column justify-space-around">
    <header class="display-flex justify-space-between align-center p-2">
      <h1>
        <span role="img" aria-label="tech">ðŸ”§</span>
        <a href="/">My_Tech_BlogSite</a>
      </h1>
      <nav>
        <a href="/">Home</a> |
        <a href="/Blog">Blog</a> |
        {{#if logged_in}}
        <a href="/profile">Profile</a> |
        <button class="no-button" id="logout">Logout</button>
        {{else}}
        <a href="/login">Login</a>
        {{/if}}
      </nav>
    </header>
    <main class="container container-fluid mt-5">
      <h2>Welcome to My_Tech_BlogSite</h2>
      
      <!-- List of blog posts -->
      {{#each blogs as |blog|}}
      <div class="blog-posts">
        <div>
          <a href="/blog/{{blog.id}}">
          <h3>{{blog.title}}</h3>
          <p>{{blog.description}}</p>
        </div>
        </a>
      </div>
      {{/each}}
    </main>
    <footer>
       <p>&copy; My_Tech_BlogSite Created By {{user.name}} on {{currentDate blog.date_created}}</p>
    </footer>
  </div>
</body>