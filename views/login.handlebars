<div class="auth-form">
  <main class="container container-fluid mt-5">
    {{#if showLogin}}
      <h2>Login to My_Tech_BlogSite</h2>
      <form action="/login" method="post" onsubmit="return redirectToProfile()">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>

        <button type="submit">Login</button>
      </form>
      <p>Don't have an account? <a href="#" onclick="toggleForm()">Sign up here</a>.</p>
    {{else}}
      <h2>Sign Up for My_Tech_BlogSite</h2>
      <form action="/signup" method="post" onsubmit="return redirectToProfile()">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>

        <button type="submit">Sign Up</button>
      </form>
      <p>Already have an account? <a href="#" onclick="toggleForm()">Login here</a>.</p>
    {{/if}}
  </main>
</div>

<script src="/js/login.js"></script>

